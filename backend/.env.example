# 数据库配置
# 支持 SQLite、PostgreSQL、MySQL 等
DATABASE_URL=sqlite:///app.db
# PostgreSQL 示例: postgresql://username:password@localhost/dbname
# MySQL 示例: mysql://username:password@localhost/dbname

# JWT 配置
# 生产环境请使用强密码生成器生成安全的密钥
JWT_SECRET_KEY=your-secret-key-change-in-production

# Flask 配置
FLASK_ENV=development
FLASK_DEBUG=True

# 可选配置
# FLASK_HOST=0.0.0.0
# FLASK_PORT=5000

# CORS 配置
# 允许的跨域来源，多个用逗号分隔，* 表示允许所有来源
CORS_ORIGINS=*
# 允许的HTTP方法
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
# 允许的请求头
CORS_HEADERS=Content-Type,Authorization
# 是否支持凭据（cookies等）
CORS_SUPPORTS_CREDENTIALS=false

# 日志配置
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志目录
LOG_DIR=logs
# 日志格式：json 或 text
LOG_FORMAT=json
# 日志文件保留天数
LOG_BACKUP_COUNT=30
# 是否开启console输出
LOG_TO_CONSOLE=true