# 数据库配置
# 支持 SQLite、PostgreSQL、MySQL 等
DATABASE_URL=sqlite:///app.db
# PostgreSQL 示例: postgresql://username:password@localhost/dbname
# MySQL 示例: mysql://username:password@localhost/dbname

# JWT 配置
# 生产环境请使用强密码生成器生成安全的密钥
JWT_SECRET_KEY=your-secret-key-change-in-production

# Flask 配置
FLASK_ENV=development
FLASK_DEBUG=True

# Flask 配置
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# CORS 配置
# 允许的跨域来源，多个用逗号分隔，* 表示允许所有来源
CORS_ORIGINS=*


# 日志配置
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志目录
LOG_DIR=logs
# 日志格式：json 或 text
LOG_FORMAT=json
# 日志文件保留天数
LOG_BACKUP_COUNT=30
# 是否开启console输出
LOG_TO_CONSOLE=true

# 请求日志配置
# 是否启用请求日志中间件
ENABLE_REQUEST_LOGGING=true
# 是否记录请求体（JSON格式）
REQUEST_LOG_BODY=true
# 是否记录请求头
REQUEST_LOG_HEADERS=true
# 是否记录响应体（可能很大，生产环境建议关闭）
REQUEST_LOG_RESPONSE_BODY=false